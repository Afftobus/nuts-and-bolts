<included>
    <!-- default pattern from hh-java-logging -->
    <include resource="shared-pattern-logback.xml"/>

    <property file="${settingsDir}/service.properties"/>
    <property scope="context" name="log.dir" value="${log.dir:-logs}"/>
    <property scope="context" name="log.immediate.flush" value="${log.immediate.flush:-true}"/>
    <property scope="context" name="log.toConsole" value="${log.toConsole:-false}"/>
    <property scope="context" name="log.timings" value="${log.timings:-false}"/>
    <property scope="context" name="log.syslogHost" value="${log.syslogHost:-localhost}"/>
    <property scope="context" name="log.syslogPort" value="${log.syslogPort:-10534}"/>

    <!-- service -->
    <appender name="service" class="ru.hh.nab.common.logging.HhSyslogAppender">
        <layout class="ru.hh.logging.StructuredJsonLayout">
            <jsonFormatter class="ch.qos.logback.contrib.jackson.JacksonJsonFormatter">
                <prettyPrint>false</prettyPrint>
            </jsonFormatter>
            <timestampFormat>yyyy-MM-dd' 'HH:mm:ss.SSSZ</timestampFormat>
            <appendLineSeparator>true</appendLineSeparator>
            <includeContextName>false</includeContextName>
        </layout>
    </appender>

    <!-- requests -->
    <appender name="requests" class="ru.hh.nab.common.logging.HhSyslogAppender">
        <layout class="ru.hh.logging.StructuredRequestJsonLayout">
            <jsonFormatter class="ch.qos.logback.contrib.jackson.JacksonJsonFormatter">
                <prettyPrint>false</prettyPrint>
            </jsonFormatter>
            <timestampFormat>yyyy-MM-dd' 'HH:mm:ss.SSSZ</timestampFormat>
            <appendLineSeparator>true</appendLineSeparator>
        </layout>
    </appender>
    <logger name="ru.hh.logging.StructuredRequestLogger" additivity="false" level="info">
        <appender-ref ref="requests"/>
    </logger>

    <!-- libraries -->
    <appender name="libraries" class="ru.hh.nab.common.logging.HhSyslogAppender">
        <layout class="ru.hh.logging.StructuredJsonLayout">
            <jsonFormatter class="ch.qos.logback.contrib.jackson.JacksonJsonFormatter">
                <prettyPrint>false</prettyPrint>
            </jsonFormatter>
            <timestampFormat>yyyy-MM-dd' 'HH:mm:ss.SSSZ</timestampFormat>
            <appendLineSeparator>true</appendLineSeparator>
            <includeContextName>false</includeContextName>
        </layout>
    </appender>
    <logger name="org.hibernate" additivity="false" level="WARN">
        <appender-ref ref="libraries"/>
    </logger>
    <logger name="com.mchange" additivity="false" level="WARN">
        <appender-ref ref="libraries"/>
    </logger>

    <!-- Sentry -->
    <appender name="Sentry" class="io.sentry.logback.SentryAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>${sentry.level}</level>
        </filter>
    </appender>

    <!-- debug -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${log.pattern}</pattern>
        </encoder>
    </appender>

    <if condition='"true".equals(property("log.toConsole"))'>
        <then>
            <logger name="org.eclipse.jetty" additivity="false" level="INFO">
                <appender-ref ref="CONSOLE"/>
            </logger>
            <logger name="ru.hh.nab.starter" additivity="false" level="INFO">
                <appender-ref ref="CONSOLE"/>
            </logger>
        </then>
    </if>

    <root level="WARN">
        <appender-ref ref="service"/>
        <appender-ref ref="Sentry"/>
        <if condition='"true".equals(property("log.toConsole"))'>
            <then>
                <appender-ref ref="CONSOLE"/>
            </then>
        </if>
    </root>
</included>
